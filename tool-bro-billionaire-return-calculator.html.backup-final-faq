    <script>
    // Reading Progress Bar
    window.addEventListener('scroll', () => {
        const winScroll = document.body.scrollTop || document.documentElement.scrollTop;
        const height = document.documentElement.scrollHeight - document.documentElement.clientHeight;
        const scrolled = (winScroll / height) * 100;
        document.querySelector('.reading-progress-bar').style.width = scrolled + '%';
    });

    // Share Article Function
    function shareArticle() {
        if (navigator.share) {
            navigator.share({
                title: 'Bro Billionaire Return Calculator',
                text: 'Calculate your returns on Tesla, Nvidia, Palantir, and other high-growth tech stocks.',
                url: window.location.href
            }).catch((error) => console.log('Error sharing:', error));
        } else {
            navigator.clipboard.writeText(window.location.href);
            alert('Link copied to clipboard!');
        }
    }

    // Stock Selection Visual Feedback
    document.querySelectorAll('.stock-option').forEach(option => {
        option.addEventListener('click', function() {
            // Remove active state from all
            document.querySelectorAll('.stock-option').forEach(opt => {
                opt.style.border = '2px solid rgba(255, 255, 255, 0.1)';
                opt.style.background = 'rgba(0, 0, 0, 0.3)';
            });
            // Add active state to clicked
            this.style.border = '2px solid #C9A227';
            this.style.background = 'rgba(201, 162, 39, 0.2)';
            // Check the radio button
            this.querySelector('input[type="radio"]').checked = true;
        });
    });

    // Calculate Returns Function
    function calculateReturns() {
        // Get input values
        const stock = document.querySelector('input[name="stock"]:checked').value;
        const amount = parseFloat(document.getElementById('investment-amount').value);
        const currency = document.getElementById('currency').value;
        const purchaseDate = document.getElementById('purchase-date').value;
        const sellDate = document.getElementById('sell-date').value;
        const dividendReinvest = document.getElementById('dividend-reinvest').checked;

        // Validate inputs
        if (!amount || amount <= 0) {
            alert('Please enter a valid investment amount');
            return;
        }

        if (!purchaseDate || !sellDate) {
            alert('Please select both purchase and sell dates');
            return;
        }

        if (new Date(purchaseDate) >= new Date(sellDate)) {
            alert('Sell date must be after purchase date');
            return;
        }

        // Mock calculation (in production, this would call an API with real historical data)
        const mockReturns = {
            'NVDA': { cagr: 96.7, totalReturn: 2418, sp500Beat: 2231, niftyBeat: 2244, dividend: 0 },
            'TSLA': { cagr: 68.3, totalReturn: 1247, sp500Beat: 1160, niftyBeat: 1173, dividend: 0 },
            'PLTR': { cagr: 60.1, totalReturn: 956, sp500Beat: 869, niftyBeat: 882, dividend: 0 },
            'MSFT': { cagr: 30.8, totalReturn: 284, sp500Beat: 197, niftyBeat: 210, dividend: 45 },
            'META': { cagr: 32.9, totalReturn: 318, sp500Beat: 231, niftyBeat: 244, dividend: 0 },
            'AMZN': { cagr: 23.9, totalReturn: 193, sp500Beat: 106, niftyBeat: 119, dividend: 0 },
            'AAPL': { cagr: 33.2, totalReturn: 322, sp500Beat: 235, niftyBeat: 248, dividend: 52 }
        };

        const returns = mockReturns[stock];
        const multiplier = 1 + (returns.totalReturn / 100);
        const currentValue = amount * multiplier;
        const profit = currentValue - amount;
        const profitPct = returns.totalReturn;

        // Currency formatting
        const currencySymbol = currency === 'USD' ? '$' : '₹';
        const formatNumber = (num) => {
            return currencySymbol + num.toLocaleString('en-IN', { maximumFractionDigits: 0 });
        };

        // Display results
        document.getElementById('result-initial').textContent = formatNumber(amount);
        document.getElementById('result-current').textContent = formatNumber(currentValue);
        document.getElementById('result-profit').textContent = formatNumber(profit);
        document.getElementById('result-return-pct').textContent = '+' + profitPct.toFixed(1) + '%';
        document.getElementById('result-cagr').textContent = '+' + returns.cagr.toFixed(1) + '%';

        if (dividendReinvest && returns.dividend > 0) {
            document.getElementById('result-dividend').textContent = formatNumber(amount * returns.dividend / 100);
        } else {
            document.getElementById('result-dividend').textContent = 'N/A';
        }

        document.getElementById('result-vs-sp500').textContent = '+' + returns.sp500Beat + '% better';
        document.getElementById('result-vs-nifty').textContent = '+' + returns.niftyBeat + '% better';

        // Show results card
        document.getElementById('results-card').classList.add('show');

        // Scroll to results
        document.getElementById('results-card').scrollIntoView({ behavior: 'smooth', block: 'nearest' });
    }

    // Initialize first stock as selected
    document.getElementById('stock-nvda').checked = true;
    document.querySelector('.stock-option').style.border = '2px solid #C9A227';
    document.querySelector('.stock-option').style.background = 'rgba(201, 162, 39, 0.2)';
    </script>
